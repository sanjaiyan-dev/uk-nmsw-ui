{
  "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest/globals": true
  },
  "extends": [
      "eslint:recommended",
      "airbnb", "airbnb/hooks",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "plugin:jsx-a11y/recommended",
      "plugin:jest/recommended"
  ],
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "react",
      "babel",
      "jest"
  ],
  "rules": {
      "quotes": [ "error",  "single"],
      "semi": ["error", "always"],
      "no-console": ["warn"],
      "eol-last": ["error", "always"],
      "react/function-component-definition": [
        2,
        {
            "namedComponents": "arrow-function",
            "unnamedComponents": "arrow-function"
        }
      ],
      "react-hooks/exhaustive-deps": "warn"
  },
  "overrides": [
    {
      "files": [
        "*.spec.js",
        "*.spec.jsx"
      ]
    }
  ]
}
